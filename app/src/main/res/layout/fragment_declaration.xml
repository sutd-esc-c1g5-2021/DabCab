<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.declaration.DeclarationFragment"
    android:orientation="vertical"
    android:layout_marginBottom="?actionBarSize">
    <RelativeLayout
        android:id="@+id/topIcons"
        android:layout_width="wrap_content"
        android:layout_height="70dp">

        <ImageButton
            android:id="@+id/profileButton"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_alignParentLeft="true"
            android:layout_marginStart="15dp"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="15dp"
            android:background="@drawable/ic_menu"
            android:padding="7dp"
            android:scaleType="fitXY" />
    </RelativeLayout>
    <androidx.swiperefreshlayout.widget.SwipeRefreshLayout android:layout_height="match_parent"
        android:id="@+id/declaration_pull_to_refresh"
        android:layout_width="match_parent">
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="?actionBarSize"
            >
            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="?actionBarSize">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        android:layout_marginLeft="20dp"
                        android:layout_marginTop="0dp"
                        android:layout_marginRight="20dp"
                        android:text="@string/title_declaration"
                        android:textColor="#000000"
                        android:textSize="30sp"
                        app:fontFamily="@font/open_sans_semibold" />

                    <Button
                        android:id="@+id/help"
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:layout_marginTop="4dp"
                        android:layout_marginRight="10dp"
                        android:layout_gravity="center_vertical"
                        android:background="@drawable/circle_button_darkgrey"
                        android:fontFamily="@font/open_sans_semibold"
                        android:text="@string/question_mark"
                        android:textColor="@color/white" />

                </LinearLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="0dp"
                    android:text="Reminders are sent to you daily!"
                    android:textColor="#000000"
                    android:textSize="15sp"
                    app:fontFamily="@font/open_sans_light" />

                <!-- A CardView that contains a TextView -->
                <!-- Daily Declaration -->
                <androidx.cardview.widget.CardView
                    android:id="@+id/daily_declaration_card_view"
                    android:layout_gravity="center"
                    app:cardCornerRadius="4dp"
                    android:layout_height="match_parent"
                    android:layout_width="match_parent"
                    android:padding="3dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:background="@drawable/declaration_bg1">
                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:layout_marginLeft="15dp">
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:id="@+id/declaration_circle0"
                                android:background="@drawable/declaration_circle0"
                                android:text="@string/zero_percent"
                                android:textAlignment="center"
                                android:gravity="center_vertical"
                                tools:ignore="RtlCompat"
                                android:layout_marginTop="10dp"
                                android:layout_marginLeft="10dp"
                                android:textColor="#000000">
                            </TextView>
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:layout_marginLeft="10dp"
                                android:layout_marginTop="10dp"
                                android:fontFamily="@font/open_sans"
                                android:text="@string/reminder_1"
                                android:textColor="#000000"
                                android:textSize="8sp">
                            </TextView>
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:text="@string/daily_declaration"
                                android:textColor="#000000"
                                android:fontFamily="@font/open_sans_semibold"
                                android:textSize="15sp"
                                android:layout_marginTop="5dp"
                                android:layout_marginLeft="10dp"
                                android:layout_marginBottom="10dp">
                            </TextView>
                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:gravity="right"
                            android:layout_margin="15dp">
                            <Button
                                android:id="@+id/log_daily_button"
                                android:layout_width="50dp"
                                android:layout_height="50dp"
                                android:background="@drawable/circle_button_black"
                                android:text="@string/LOG"
                                android:textColor="#000000">
                                android:fontFamily="@font/open_sans_semibold">
                            </Button>
                        </LinearLayout>
                    </LinearLayout>
                </androidx.cardview.widget.CardView>
                <!-- Temperature Taking - (Morning) -->
                <androidx.cardview.widget.CardView
                    android:id="@+id/morning_card_view"
                    android:layout_gravity="center"
                    app:cardCornerRadius="4dp"
                    android:layout_height="match_parent"
                    android:layout_width="match_parent"
                    android:padding="3dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:background="@drawable/declaration_bg1">
                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:layout_marginLeft="15dp">
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:id="@+id/temp_declaration_circle1"
                                android:background="@drawable/declaration_circle1"
                                android:text="0%"
                                android:textAlignment="center"
                                android:gravity="center_vertical"
                                tools:ignore="RtlCompat"
                                android:layout_marginTop="10dp"
                                android:layout_marginLeft="10dp"
                                android:textColor="#000000">
                            </TextView>
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:layout_marginLeft="10dp"
                                android:layout_marginTop="10dp"
                                android:fontFamily="@font/open_sans"
                                android:text="@string/morning"
                                android:textColor="#000000"
                                android:textSize="8sp">
                            </TextView>
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:text="@string/temperature_taking"
                                android:textColor="#000000"
                                android:fontFamily="@font/open_sans_semibold"
                                android:textSize="15sp"
                                android:layout_marginTop="5dp"
                                android:layout_marginLeft="10dp"
                                android:layout_marginBottom="10dp">
                            </TextView>
                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:gravity="right"
                            android:layout_margin="15dp">
                            <Button
                                android:id="@+id/log_temperature_button1"
                                android:layout_width="50dp"
                                android:layout_height="50dp"
                                android:background="@drawable/circle_button_black"
                                android:text="@string/LOG"
                                android:textColor="#000000"
                                android:fontFamily="@font/open_sans_semibold"></Button>
                        </LinearLayout>
                    </LinearLayout>
                </androidx.cardview.widget.CardView>

                <!-- Temperature Taking (Evening) -->
                <androidx.cardview.widget.CardView
                    android:id="@+id/evening_card_view"
                    android:layout_gravity="center"
                    app:cardCornerRadius="4dp"
                    android:layout_height="match_parent"
                    android:layout_width="match_parent"
                    android:padding="3dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:layout_marginBottom="10dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:background="@drawable/declaration_bg1">
                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:layout_marginLeft="15dp">
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:id="@+id/temp_declaration_circle2"
                                android:background="@drawable/declaration_circle1"
                                android:text="0%"
                                android:textAlignment="center"
                                android:gravity="center_vertical"
                                tools:ignore="RtlCompat"
                                android:layout_marginTop="10dp"
                                android:layout_marginLeft="10dp"
                                android:textColor="#000000">
                            </TextView>
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:layout_marginLeft="10dp"
                                android:layout_marginTop="10dp"
                                android:fontFamily="@font/open_sans"
                                android:text="@string/evening"
                                android:textColor="#000000"
                                android:textSize="8sp">
                            </TextView>
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:text="@string/temperature_taking"
                                android:textColor="#000000"
                                android:fontFamily="@font/open_sans_semibold"
                                android:textSize="15sp"
                                android:layout_marginTop="5dp"
                                android:layout_marginLeft="10dp"
                                android:layout_marginBottom="10dp">
                            </TextView>
                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:gravity="right"
                            android:layout_margin="15dp">
                            <Button
                                android:id="@+id/log_temperature_button2"
                                android:layout_width="50dp"
                                android:layout_height="50dp"
                                android:background="@drawable/circle_button_black"
                                android:text="@string/LOG"
                                android:textColor="#000000"
                                android:fontFamily="@font/open_sans_semibold"></Button>
                        </LinearLayout>
                    </LinearLayout>
                </androidx.cardview.widget.CardView>
            </LinearLayout>
            <!-- Progress bar overlay; shown while login is in progress -->
        </ScrollView>
    </androidx.swiperefreshlayout.widget.SwipeRefreshLayout>

    <include layout="@layout/include_progress_overlay"/>


</LinearLayout>