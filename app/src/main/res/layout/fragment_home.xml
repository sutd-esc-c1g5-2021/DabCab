                            android:id="@+id/temp_declaration_circle2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="10dp"
                            android:layout_marginTop="10dp"
                            android:background="@drawable/declaration_circle1"
                            android:gravity="center_vertical"
                            android:text="0%"
                            android:textAlignment="center"
                            android:textColor="#000000"
                            tools:ignore="RtlCompat"></TextView>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_marginLeft="10dp"
                            android:layout_marginTop="10dp"
                            android:fontFamily="@font/open_sans"
                            android:text="@string/evening"
                            android:textColor="#000000"
                            android:textSize="8sp"></TextView>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_marginLeft="10dp"
                            android:layout_marginTop="5dp"
                            android:layout_marginBottom="10dp"
                            android:fontFamily="@font/open_sans_semibold"
                            android:text="@string/temperature_taking"
                            android:textColor="#000000"
                            android:textSize="15sp"></TextView>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_margin="15dp"
                        android:gravity="right">

                        <Button
                            android:id="@+id/log_temperature_button2"
                            android:layout_width="50dp"
                            android:layout_height="50dp"
                            android:background="@drawable/circle_button_black"
                            android:fontFamily="@font/open_sans_semibold"
                            android:text="@string/LOG"
                            android:textColor="#000000"></Button>
                    </LinearLayout>
                </LinearLayout>
            </androidx.cardview.widget.CardView>


            <!--    Scrolling view for frequently visited places-->
            <HorizontalScrollView
                android:id="@+id/horizontalScrollView"
                android:layout_width="wrap_content"
                android:layout_height="120dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="?actionBarSize"
                android:paddingBottom="@dimen/activity_horizontal_margin">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginTop="10dp"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/freqPlaces"
                        android:layout_width="90dp"
                        android:layout_height="match_parent"
                        android:background="@drawable/location_round_corner"
                        android:fontFamily="@font/open_sans_semibold"
                        android:gravity="center"
                        android:paddingHorizontal="3dp"
                        android:text="@string/places_you_frequently_visit"
                        android:textColor="#000000"
                        android:textSize="12sp" />

                    <!--            Frequently visited location 1-->
                    <FrameLayout
                        android:id="@+id/frame_1"
                        android:layout_width="90dp"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="5dp"
                        android:orientation="vertical"
                        android:visibility="invisible">

                        <ImageButton
                            android:id="@+id/location_1_button"
                            android:layout_width="90dp"
                            android:layout_height="match_parent"
                            android:background="@drawable/location_1" />

                        <TextView
                            android:id="@+id/location_1_text"
                            android:layout_width="match_parent"
                            android:layout_height="40dp"
                            android:layout_gravity="center_horizontal"
                            android:layout_marginTop="10dp"
                            android:fontFamily="@font/open_sans_semibold"
                            android:gravity="center"
                            android:paddingHorizontal="3dp"
                            android:text="@string/location_1"
                            android:textColor="#FFFFFF"
                            android:textSize="12sp" />

                        <TextView
                            android:id="@+id/location_1_count"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_horizontal"
                            android:layout_marginTop="45dp"
                            android:fontFamily="@font/open_sans_bold"
                            android:text="25"
                            android:textColor="#FFFFFF"
                            android:textSize="25sp" />
                    </FrameLayout>

                    <!--            Frequently visited location 2-->
                    <FrameLayout
                        android:id="@+id/frame_2"
                        android:layout_width="90dp"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="5dp"
                        android:orientation="vertical"
                        android:visibility="invisible">

                        <ImageButton
