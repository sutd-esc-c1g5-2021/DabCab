        android:paddingLeft="40dp"
        android:paddingTop="5dp"
        android:paddingRight="40dp"
        android:paddingBottom="5dp"
        android:layout_marginBottom="10dp"
        android:text="@string/check_bluetooth"
        android:textColor="#FFFFFF"
        android:textSize="20sp"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:text="@string/title_declaration"
                android:textColor="#000000"
                android:textSize="30sp"
                app:fontFamily="@font/open_sans_semibold" />
            <!-- A CardView that contains a TextView -->
            <!-- Daily Declaration -->
            <androidx.cardview.widget.CardView
                android:id="@+id/daily_declaration_card_view"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="20dp"
                android:padding="3dp"
                app:cardCornerRadius="4dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/declaration_bg1"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="15dp"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/declaration_circle0"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="10dp"
                            android:layout_marginTop="10dp"
                            android:background="@drawable/declaration_circle0"
                            android:gravity="center_vertical"
                            android:text="@string/zero_percent"
                            android:textAlignment="center"
                            android:textColor="#000000"
                            tools:ignore="RtlCompat"></TextView>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_marginLeft="10dp"
                            android:layout_marginTop="10dp"
                            android:fontFamily="@font/open_sans_semibold"
                            android:text="@string/daily_declaration"
                            android:textColor="#000000"
                            android:textSize="15sp"></TextView>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_marginLeft="10dp"
                            android:layout_marginTop="5dp"
                            android:layout_marginBottom="10dp"
                            android:fontFamily="@font/open_sans"
                            android:text="@string/reminder_1"
                            android:textColor="#000000"
                            android:textSize="8sp"></TextView>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_margin="15dp"
                        android:gravity="right">

                        <Button
                            android:id="@+id/log_daily_button"
                            android:layout_width="50dp"
                            android:layout_height="50dp"
                            android:background="@drawable/circle_button_black"
                            android:text="@string/LOG"
                            android:textColor="#000000">
                            android:fontFamily="@font/open_sans_semibold">
                        </Button>
                    </LinearLayout>
                </LinearLayout>
            </androidx.cardview.widget.CardView>
            <!-- Temperature Taking - (Morning) -->
            <androidx.cardview.widget.CardView
                android:id="@+id/morning_card_view"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="20dp"
                android:padding="3dp"
                app:cardCornerRadius="4dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/declaration_bg1"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="15dp"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/temp_declaration_circle1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="10dp"
                            android:layout_marginTop="10dp"
                            android:background="@drawable/declaration_circle1"
                            android:gravity="center_vertical"
                            android:text="0%"
                            android:textAlignment="center"
                            android:textColor="#000000"
                            tools:ignore="RtlCompat"></TextView>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_marginLeft="10dp"
                            android:layout_marginTop="10dp"
                            android:fontFamily="@font/open_sans"
                            android:text="@string/morning"
                            android:textColor="#000000"
                            android:textSize="8sp"></TextView>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_marginLeft="10dp"
                            android:layout_marginTop="5dp"
                            android:layout_marginBottom="10dp"
                            android:fontFamily="@font/open_sans_semibold"
                            android:text="@string/temperature_taking"
                            android:textColor="#000000"
                            android:textSize="15sp"></TextView>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_margin="15dp"
                        android:gravity="right">

                        <Button
                            android:id="@+id/log_temperature_button1"
                            android:layout_width="50dp"
                            android:layout_height="50dp"
                            android:background="@drawable/circle_button_black"
                            android:fontFamily="@font/open_sans_semibold"
                            android:text="@string/LOG"
                            android:textColor="#000000"></Button>
                    </LinearLayout>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- Temperature Taking (Evening) -->
            <androidx.cardview.widget.CardView
                android:id="@+id/evening_card_view"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="20dp"
                android:layout_marginBottom="10dp"
                android:padding="3dp"
                app:cardCornerRadius="4dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/declaration_bg1"
                    android:orientation="horizontal">

